{% extends 'base2.html.twig' %}

{% block title %}Internship Dashboard - SkyLearn Admin{% endblock %}

{% block nav %}
    <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <div class="text-center sidebar-brand-wrapper d-flex align-items-center">
            <!-- Le lien vers la route 'admin_dashboard' -->
            <a class="sidebar-brand brand-logo" href="{{ path('admin_dashboard') }}">
                <img src="{{ asset('images2/Sky.png') }}" alt="logo" style="width: 150px; height: auto;" />
            </a>
            <a class="sidebar-brand brand-logo-mini pl-4 pt-3" href="{{ path('admin_dashboard') }}">
                <img src="{{ asset('images2/Sky.png') }}" alt="logo" style="width: 50px; height: auto;" />
            </a>
        </div>
        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('admin_dashboard') }}">
                    <i class="mdi mdi-home menu-icon"></i>
                    <span class="menu-title">Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('admin_internships') }}">
                    <i class="mdi mdi-format-list-bulleted menu-icon"></i>
                    <span class="menu-title">Internships</span>
                </a>
            </li>
        </ul>
    </nav>
{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="page-header d-flex justify-content-between">
            <h3 class="page-title">Internships</h3>
            <a href="{{ path('admin_create_internship') }}" class="btn btn-primary">Add Internship</a>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Internship List</h4>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Company Name</th>
                                        <th>Title</th>
                                        <th>Location</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>TechCorp</td>
                                        <td>Software Development Intern</td>
                                        <td>New York</td>
                                        <td>
                                            <a href="{{ path('admin_modify_internship', { 'id': 1 }) }}" class="btn btn-warning btn-sm">Modify</a>
                                            <button class="btn btn-danger btn-sm">Delete</button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>2</td>
                                        <td>Innovatech</td>
                                        <td>Data Science Intern</td>
                                        <td>San Francisco</td>
                                        <td>
                                            <a href="{{ path('admin_modify_internship', { 'id': 2 }) }}" class="btn btn-warning btn-sm">Modify</a>
                                            <button class="btn btn-danger btn-sm">Delete</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
