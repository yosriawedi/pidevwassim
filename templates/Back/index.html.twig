{% extends 'base.html.twig' %}

{% block body %}
<main class="main">

    <!-- Hero Section -->
    <section id="hero" class="hero section dark-background">
        <img src="{{ asset('img/education.jpg') }}" alt="" data-aos="fade-in">
        <div class="container">
            <h2 data-aos="fade-up" data-aos-delay="100">Learning Today,<br>Leading Tomorrow</h2>
            <p data-aos="fade-up" data-aos-delay="200">We believe education should be for everyone.</p>
        </div>
    </section><!-- /Hero Section -->

   <!-- About Section -->
<section id="about" class="about section" style="background-color: #f9f9f9; padding: 50px 0;">

  <div class="container" style="max-width: 1200px; margin: auto; display: flex; align-items: center; gap: 20px;">

    <!-- Image Section -->
    <div class="col-lg-6 order-1 order-lg-2" data-aos="fade-up" data-aos-delay="100">
      <img src="img/studying.jpg" class="img-fluid" alt="Students studying" style="width: 100%; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
    </div>

    <!-- Text Section -->
    <div class="col-lg-6 order-2 order-lg-1 content" data-aos="fade-up" data-aos-delay="200">
      <h3 style="font-size: 2rem; color: #333; margin-bottom: 20px;">Welcome to SkyLearn, a dynamic and innovative educational platform</h3>
      <p class="fst-italic" style="font-size: 1rem; color: #555; margin-bottom: 20px;">
        At SkyLearn, we believe education should be accessible to everyone, which is why our platform offers two types of courses:
      </p>
      <ul style="list-style: none; padding: 0;">
        <li style="margin-bottom: 10px; display: flex; align-items: center;">
          <i class="bi bi-check-circle" style="color: #28a745; margin-right: 10px; font-size: 1.2rem;"></i>
          <span style="font-size: 1rem; color: #333;">Free Courses: Open to all users, providing fundamental knowledge and skills.</span>
        </li>
        <li style="margin-bottom: 10px; display: flex; align-items: center;">
          <i class="bi bi-check-circle" style="color: #28a745; margin-right: 10px; font-size: 1.2rem;"></i>
          <span style="font-size: 1rem; color: #333;">Premium Training Programs: Structured by education level, offering advanced resources</span>
        </li>
        <li style="margin-bottom: 10px; display: flex; align-items: center;">
          <i class="bi bi-check-circle" style="color: #28a745; margin-right: 10px; font-size: 1.2rem;"></i>
          <span style="font-size: 1rem; color: #333;">In addition to our training modules, SkyLearn connects students with companies through a dedicated internship space. Organizations can post internship opportunities, and interested users can easily apply, creating a seamless link between academia and industry.</span>
        </li>
      </ul>
      <a href="#" class="read-more" style="display: inline-block; margin-top: 20px; background-color: #28a745; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none; font-size: 1rem;">
        <span>Read More</span> <i class="bi bi-arrow-right"></i>
      </a>
    </div>

  </div>
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.css" rel="stylesheet">
</section>

    <!-- Courses Section -->
    <section id="courses" class="courses section">
        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2>Courses</h2>
            <p>Popular Courses</p>
        </div><!-- End Section Title -->

        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                    <div class="course-item">
                        <img src="{{ asset('img/course-1.jpg') }}" class="img-fluid" alt="...">
                        <div class="course-content">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <p class="category">Web Development</p>
                                <p class="price">$169</p>
                            </div>

                            <h3><a href="{{ path('course_details') }}">Website Design</a></h3>
                            <p class="description">This Website Design course is designed to teach students how to create visually appealing, user-friendly, and fully functional websites.</p>
                            <div class="trainer d-flex justify-content-between align-items-center">
                                <div class="trainer-profile d-flex align-items-center">
                                    <img src="{{ asset('img/yosri.jpg') }}" class="img-fluid" alt="">
                                    <a href="#" class="trainer-link">Yosri Awadi</a>
                                </div>
                                <div class="trainer-rank d-flex align-items-center">
                                    <i class="bi bi-person user-icon"></i>&nbsp;50
                                    &nbsp;&nbsp;
                                    <i class="bi bi-heart heart-icon"></i>&nbsp;65
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- End Course Item-->

                <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4 mt-md-0" data-aos="zoom-in" data-aos-delay="200">
                    <div class="course-item">
                        <img src="{{ asset('img/course-2.jpg') }}" class="img-fluid" alt="...">
                        <div class="course-content">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <p class="category">Marketing</p>
                                <p class="price">$250</p>
                            </div>

                            <h3><a href="{{ path('course_details') }}">Search Engine Optimization</a></h3>
                            <p class="description">This Marketing course is designed to equip students with the essential skills needed to create effective marketing strategies, build strong brands, and drive business growth.</p>
                            <div class="trainer d-flex justify-content-between align-items-center">
                                <div class="trainer-profile d-flex align-items-center">
                                    <img src="{{ asset('img/ranime.jpg') }}" class="img-fluid" alt="">
                                    <a href="#" class="trainer-link">Ranim</a>
                                </div>
                                <div class="trainer-rank d-flex align-items-center">
                                    <i class="bi bi-person user-icon"></i>&nbsp;35
                                    &nbsp;&nbsp;
                                    <i class="bi bi-heart heart-icon"></i>&nbsp;42
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- End Course Item-->

                <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4 mt-lg-0" data-aos="zoom-in" data-aos-delay="300">
                    <div class="course-item">
                        <img src="{{ asset('img/course-3.jpg') }}" class="img" alt="...">
                        <div class="course-content">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <p class="category">Content</p>
                                <p class="price">$180</p>
                            </div>

                            <h3><a href="{{ path('course_details') }}">Copywriting</a></h3>
                            <p class="description">This Copywriting course is designed to help students craft compelling, persuasive, and high-converting content for various marketing platforms.</p>
                            <div class="trainer d-flex justify-content-between align-items-center">
                                <div class="trainer-profile d-flex align-items-center">
                                    <img src="{{ asset('img/jesser.jpg') }}" class="img-fluid" alt="">
                                    <a href="#" class="trainer-link">Jesser Ghoul</a>
                                </div>
                                <div class="trainer-rank d-flex align-items-center">
                                    <i class="bi bi-person user-icon"></i>&nbsp;20
                                    &nbsp;&nbsp;
                                    <i class="bi bi-heart heart-icon"></i>&nbsp;85
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- End Course Item-->
            </div>
        </div>
    </section><!-- /Courses Section -->
</main>
{% endblock %}
