{% extends 'base2.html.twig' %}

{% block title %}Complaints - SkyLearn Admin{% endblock %}

{% block nav %}
<nav class="sidebar sidebar-offcanvas" id="sidebar">
    <div class="text-center sidebar-brand-wrapper d-flex align-items-center">
        <a class="sidebar-brand brand-logo" href="{{ path('admin_dashboard') }}">
            <img src="{{ asset('images2/Sky.png') }}" alt="logo" style="width: 150px; height: auto;" />
        </a>
        <a class="sidebar-brand brand-logo-mini pl-4 pt-3" href="{{ path('admin_dashboard') }}">
            <img src="{{ asset('images2/Sky.png') }}" alt="logo" style="width: 50px; height: auto;" />
        </a>
    </div>
    <ul class="nav">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_dashboard') }}">
                <i class="mdi mdi-home menu-icon"></i>
                <span class="menu-title">Dashboard</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_complaints') }}">
                <i class="mdi mdi-format-list-bulleted menu-icon"></i>
                <span class="menu-title">Complaints</span>
            </a>
        </li>
    </ul>
</nav>
{% endblock %}

{% block navbar %}
<nav class="navbar col-lg-12 col-12 p-lg-0 fixed-top d-flex flex-row">
    <div class="navbar-menu-wrapper d-flex align-items-stretch justify-content-between">
        <button class="navbar-toggler navbar-toggler align-self-center mr-2" type="button" data-toggle="minimize">
            <i class="mdi mdi-menu"></i>
        </button>
    </div>
</nav>
{% endblock %}

{% block body %}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Complaints & Responses</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Complaints</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Manage Complaints</li>
                </ol>
            </nav>
        </div>

        <!-- Complaints Table -->
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Complaints Table</h4>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Subject</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Jean Dupont</td>
                                    <td>jean@example.com</td>
                                    <td>Complaint 1</td>
                                    <td>
                                        <input type="checkbox" class="status-check" name="status1"> Pending
                                        <input type="checkbox" class="status-check" name="status1"> In Progress
                                        <input type="checkbox" class="status-check" name="status1"> Resolved
                                    </td>
                                    <td>2024-02-05</td>
                                    <td>
                                        <button class="btn btn-success btn-sm"><i class="mdi mdi-plus"></i></button>
                                        <button class="btn btn-warning btn-sm"><i class="mdi mdi-pencil"></i></button>
                                        <button class="btn btn-danger btn-sm"><i class="mdi mdi-delete"></i></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Responses Table -->
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Responses Table</h4>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Subject</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Jacob</td>
                                    <td>Photoshop</td>
                                    <td class="text-danger">28.76% <i class="mdi mdi-arrow-down"></i></td>
                                    <td>
                                        <input type="checkbox" class="status-check" name="status1"> Pending
                                        <input type="checkbox" class="status-check" name="status1"> In Progress
                                        <input type="checkbox" class="status-check" name="status1"> Resolved
                                    </td>
                                    <td>2024-02-05</td>
                                    <td>
                                        <button class="btn btn-warning btn-sm"><i class="mdi mdi-pencil"></i></button>
                                        <button class="btn btn-danger btn-sm"><i class="mdi mdi-delete"></i></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% block footer %}
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright Â© SkyLearn 2024</span>
        </div>
    </footer>
    {% endblock %}
</div>
{% endblock %}
