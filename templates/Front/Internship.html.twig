{% extends 'base.html.twig' %}

{% block title %}Internship - SkyLearn{% endblock %}

{% block nav %}
<nav id="navmenu" class="navmenu">
    <ul>
        <li><a href="{{ path('home') }}">Home</a></li>
        <li><a href="{{ path('about') }}">About</a></li>
        <li><a href="{{ path('courses') }}">Courses</a></li>
        <li><a href="{{ path('tutors') }}">Tutors</a></li>
        <li><a href="{{ path('events') }}">Events</a></li>
        <li><a href="{{ path('internships') }}" class="active">Internship</a></li>
        <li><a href="{{ path('contact') }}">Contact</a></li>
    </ul>
    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
</nav>
{% endblock %}

{% block body %}
<main class="main">

    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1>Internship</h1>
                        <p class="mb-0">Our internships allow you to work on real-world projects and gain invaluable experience in web design, digital marketing, copywriting, and more.</p>
                    </div>
                </div>
            </div>
        </div>
        <nav class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a href="{{ path('home') }}">Home</a></li>
                    <li class="current">Internship</li>
                </ol>
            </div>
        </nav>
    </div><!-- End Page Title -->

    <!-- Internship Section -->
    <section class="container-fluid">
        <h2 class="text-center mt-5">Available Internships</h2>
        
        <div class="row mt-4">
            <!-- Internship 1 -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="{{ asset('img/digital.jpg') }}" class="card-img-top" alt="Web Development Internship">
                    <div class="card-body">
                        <h5 class="card-title">Web Development Internship</h5>
                        <p><strong>Company:</strong> TechCorp | <strong>Duration:</strong> 3 months</p>
                        <p>Work on real-world projects using Symfony and Java.</p>
                        
                        <a href="{{ path('postuler', { 'id': 1 }) }}" class="btn btn-primary">Apply</a>
                        <a href="{{ path('app_internship_show', { 'id': 1 }) }}" class="btn btn-info">Show</a> <!-- Button to show details -->
                        <button class="btn btn-secondary d-none" onclick="cancelApplication(this)">Cancel Application</button>
                    </div>
                </div>
            </div>

            <!-- Internship 2 -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="{{ asset('img/webdevv.jpg') }}" class="card-img-top" alt="Digital Marketing Internship">
                    <div class="card-body">
                        <h5 class="card-title">Digital Marketing Internship</h5>
                        <p><strong>Company:</strong> MarketPlus | <strong>Duration:</strong> 2 months</p>
                        <p>Gain experience in content management, advertising, and campaign analysis.</p>
                        
                        <a href="{{ path('postuler', { 'id': 2 }) }}" class="btn btn-primary">Apply</a>
                        <a href="{{ path('app_internship_show', { 'id': 2 }) }}" class="btn btn-info">Show</a> <!-- Button to show details -->
                        <button class="btn btn-secondary d-none" onclick="cancelApplication(this)">Cancel Application</button>
                    </div>
                </div>
            </div>

            <!-- Internship 3 -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="{{ asset('img/marketing.jpg') }}" class="card-img-top" alt="Marketing Internship">
                    <div class="card-body">
                        <h5 class="card-title">Marketing Internship</h5>
                        <p><strong>Company:</strong> BrandX | <strong>Duration:</strong> 6 months</p>
                        <p>Assist in marketing campaigns, analyze data, and manage social media.</p>
                        
                        <a href="{{ path('postuler', { 'id': 3 }) }}" class="btn btn-primary">Apply</a>
                        <a href="{{ path('app_internship_show', { 'id': 3 }) }}" class="btn btn-info">Show</a> <!-- Button to show details -->
                        <button class="btn btn-secondary d-none" onclick="cancelApplication(this)">Cancel Application</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>
{% endblock %}
