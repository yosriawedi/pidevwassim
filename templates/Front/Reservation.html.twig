{% extends 'base.html.twig' %}

{% block title %}Reservation - SkyLearn{% endblock %}

{% block body %}
    <div class="reservation-container">
        <div class="left-side">
            <h2>Reservation Form</h2>
            <p>Please place an online reservation at least 3 days in advance.</p>
            <img src="{{ asset('img/event.jpg') }}" alt="Event" width="200">
        </div>
        <div class="right-side">
            <h3>Reservation Information</h3>
            <form action="{{ path('reservation_submit') }}" method="post">
                <label for="date">Date</label>
                <input type="date" id="date" name="date" required>

                <label for="time">Time</label>
                <input type="time" id="time" name="time" required>

                <label>Available Seats</label>
                <input type="number" name="adults" placeholder="Adults" required>
                <input type="number" name="kids" placeholder="Kids" required>

                <label for="special_request">Special Request</label>
                <textarea id="special_request" name="special_request" rows="3" placeholder="Enter any special request..."></textarea>

                <h3>Personal Information</h3>
                <input type="text" name="name" placeholder="Name" required>
                <input type="tel" name="phone" placeholder="Phone" required>

                <button type="submit" class="btn-submit">Ensure</button>
            </form>
        </div>
    </div>
{% endblock %}

{% block css %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }
        .reservation-container {
            display: flex;
            max-width: 900px;
            margin: 50px auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        .left-side {
            flex: 1;
            background: #f4f4f4;
            padding: 30px;
            text-align: center;
        }
        .right-side {
            flex: 1;
            background: #333;
            color: white;
            padding: 30px;
        }
        .right-side input, .right-side textarea {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border-radius: 5px;
            border: none;
        }
        .btn-submit {
            background: #28a745;
            color: white;
            padding: 10px;
            width: 100%;
            border: none;
            margin-top: 15px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
        }
        .btn-submit:hover {
            background: #218838;
        }
    </style>
{% endblock %}
