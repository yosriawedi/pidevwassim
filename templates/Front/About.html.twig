{% extends 'base.html.twig' %}

{% block title %}About Us - SkyLearn{% endblock %}

{% block header %}
    <header id="header" class="header d-flex align-items-center sticky-top">
        <div class="container-fluid container-xl position-relative d-flex align-items-center">
            <a href="{{ path('home') }}" class="logo d-flex align-items-center me-auto">
                <img src="{{ asset('img/skylearnlogo.png') }}" alt="SkyLearn">
                <h1 class="sitename">SkyLearn</h1>
            </a>
            {% block nav %}
                <nav id="navmenu" class="navmenu">
                    <ul>
                        <li><a href="{{ path('home') }}">Home</a></li>
                        <li><a href="{{ path('about') }}" class="active">About</a></li>
                        <li><a href="{{ path('courses') }}">Courses</a></li>
                        <li><a href="{{ path('tutors') }}">Tutors</a></li>
                        <li><a href="{{ path('events') }}">Events</a></li>
                        <li><a href="{{ path('internships') }}">Internship</a></li>
                        <li><a href="{{ path('contact') }}">Contact</a></li>
                    </ul>
                    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
                </nav>
            {% endblock %}
            <a class="btn-getstarted me-2" href="{{ path('sign_in') }}">Sign In</a>
            <div class="signup-container">
                <a class="btn-getstarted" href="#" id="signup-btn">Sign Up</a>
                <div class="signup-options" id="signup-options">
                    <a href="{{ path('sign_up_student') }}">Student</a>
                    <a href="{{ path('sign_up_agent') }}">Company Agent</a>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}
    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1>About Us</h1>
                        <p class="mb-0">Welcome to SkyLearn, a dynamic and innovative educational platform designed to bridge the gap between learning, professional development, and collaboration.</p>
                    </div>
                </div>
            </div>
        </div>
        <nav class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a href="{{ path('home') }}">Home</a></li>
                    <li class="current">About Us</li>
                </ol>
            </div>
        </nav>
    </div><!-- End Page Title -->

    <!-- About Us Section -->
    <section id="about-us" class="section about-us">
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-6 order-1 order-lg-2" data-aos="fade-up" data-aos-delay="100">
                    <img src="{{ asset('img/studying.jpg') }}" class="img-fluid" alt="Studying">
                </div>
                <div class="col-lg-6 order-2 order-lg-1 content" data-aos="fade-up" data-aos-delay="200">
                    <h3>Our mission is to empower students, educators, and organizations</h3>
                    <p class="fst-italic">
                        At SkyLearn, we believe education should be accessible to everyone, which is why our platform offers two types of courses:
                    </p>
                    <ul>
                        <li><i class="bi bi-check-circle"></i> <span>Free Courses: Open to all users, providing fundamental knowledge and skills.</span></li>
                        <li><i class="bi bi-check-circle"></i> <span>Premium Training Programs: Structured by education level, offering advanced resources.</span></li>
                        <li><i class="bi bi-check-circle"></i> <span>SkyLearn connects students with companies through a dedicated internship space.</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </section><!-- /About Us Section -->

    <!-- Counts Section -->
    <section id="counts" class="section counts light-background">
        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row gy-4">
                <div class="col-lg-3 col-md-6">
                    <div class="stats-item text-center w-100 h-100">
                        <span data-purecounter-start="0" data-purecounter-end="1232" data-purecounter-duration="1" class="purecounter"></span>
                        <p>Students</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stats-item text-center w-100 h-100">
                        <span data-purecounter-start="0" data-purecounter-end="64" data-purecounter-duration="1" class="purecounter"></span>
                        <p>Courses</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stats-item text-center w-100 h-100">
                        <span data-purecounter-start="0" data-purecounter-end="42" data-purecounter-duration="1" class="purecounter"></span>
                        <p>Events</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stats-item text-center w-100 h-100">
                        <span data-purecounter-start="0" data-purecounter-end="24" data-purecounter-duration="1" class="purecounter"></span>
                        <p>Trainers</p>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- /Counts Section -->
{% endblock %}
