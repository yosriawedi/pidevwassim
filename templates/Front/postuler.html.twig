{% extends 'base.html.twig' %}

{% block title %}Internship - SkyLearn{% endblock %}

{% block nav %}
<nav id="navmenu" class="navmenu">
    <ul>
        <li><a href="{{ path('home') }}">Home</a></li>
        <li><a href="{{ path('about') }}">About</a></li>
        <li><a href="{{ path('courses') }}">Courses</a></li>
        <li><a href="{{ path('tutors') }}">Tutors</a></li>
        <li><a href="{{ path('events') }}">Events</a></li>
        <li><a href="{{ path('internships') }}" class="active">Internship</a></li>
        <li><a href="{{ path('contact') }}">Contact</a></li>
    </ul>
    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
</nav>
{% endblock %}

{% block body %}
<main class="main">
    <div class="container" data-aos="fade-up">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h2 class="text-center mb-4">Apply for an Internship</h2>

                <form action="{{ path('submit_application') }}" method="POST" enctype="multipart/form-data">
                    <!-- Personal Information -->
                    <div class="mb-3">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>

                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="phone" name="phone" required>
                    </div>

                    <!-- Internship Details -->
                    <div class="mb-3">
                        <label for="stage" class="form-label">Internship</label>
                        <input type="text" class="form-control" id="stage" name="stage" readonly>
                    </div>

                    <!-- CV Upload -->
                    <div class="mb-3">
                        <label for="cv" class="form-label">Upload Your CV</label>
                        <input type="file" class="form-control" id="cv" name="cv" accept=".pdf, .docx" required>
                    </div>

                    <!-- Cover Letter -->
                    <div class="mb-3">
                        <label class="form-label">Cover Letter</label>
                        <select class="form-control" id="cover_letter_option">
                            <option value="write">Write</option>
                            <option value="upload">Upload</option>
                        </select>
                    </div>

                    <!-- Text Cover Letter -->
                    <div class="mb-3" id="cover_letter_text">
                        <label for="cover_letter" class="form-label">Write your cover letter</label>
                        <textarea class="form-control" id="cover_letter" name="cover_letter" rows="4"></textarea>
                    </div>

                    <!-- Upload Cover Letter -->
                    <div class="mb-3 d-none" id="cover_letter_file">
                        <label for="cover_letter_upload" class="form-label">Upload your cover letter</label>
                        <input type="file" class="form-control" id="cover_letter_upload" name="cover_letter_upload" accept=".pdf, .docx">
                    </div>

                    <!-- Submit -->
                    <button type="submit" class="btn btn-primary w-100">Submit Application</button>
                </form>
            </div>
        </div>
    </div>
</main>
{% endblock %}
