{% extends 'base.html.twig' %}

{% block title %}Course Details - SkyLearn{% endblock %}

{% block nav %}
<nav id="navmenu" class="navmenu">
    <ul>
        <li><a href="{{ path('home') }}">Home</a></li>
        <li><a href="{{ path('about') }}">About</a></li>
        <li><a href="{{ path('courses') }}" class="active">Courses</a></li>
        <li><a href="{{ path('tutors') }}">Tutors</a></li>
        <li><a href="{{ path('events') }}">Events</a></li>
        <li><a href="{{ path('internships') }}">Internship</a></li>
        <li><a href="{{ path('contact') }}">Contact</a></li>
    </ul>
    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
</nav>
{% endblock %}

{% block body %}
<main class="main">
    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
        <div class="container">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-lg-8">
                    <h1>Course Details</h1>
                    <p class="mb-0">This Website Design course is designed to teach students how to create visually appealing, user-friendly, and fully functional websites.</p>
                </div>
            </div>
        </div>
    </div>

    <nav class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="{{ path('home') }}">Home</a></li>
                <li class="current">Course Details</li>
            </ol>
        </div>
    </nav>

    <!-- Course Details Section -->
    <section id="courses-course-details" class="courses-course-details section">
        <div class="container" data-aos="fade-up">
            <div class="row">
                <div class="col-lg-8">
                    <img src="{{ asset('img/course-details.jpg') }}" class="img-fluid" alt="Course Details">
                    <h3>Website Design</h3>
                    <p>The course begins with an introduction to design tools such as Figma, Adobe XD, and Sketch, where students learn to create wireframes, mockups, and prototypes. It then progresses to front-end development, teaching essential coding skills in HTML, CSS, and JavaScript to bring designs to life.</p>
                </div>
                <div class="col-lg-4">
                    <div class="course-info d-flex justify-content-between align-items-center">
                        <h5>Trainer</h5>
                        <p><a href="#">Walter White</a></p>
                    </div>
                    <div class="course-info d-flex justify-content-between align-items-center">
                        <h5>Course Fee</h5>
                        <p>$165</p>
                    </div>
                    <div class="course-info d-flex justify-content-between align-items-center">
                        <h5>Period</h5>
                        <p>12 Hours</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Tabs Section -->
    <section id="tabs" class="tabs section">
        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row">
                <div class="col-lg-3">
                    <ul class="nav nav-tabs flex-column">
                        {% for tab in ['UI/UX Design Fundamentals', 'Design Tools & Prototyping', 'Front-End Development Basics', 'Website Optimization & Performance'] %}
                            <li class="nav-item">
                                <a class="nav-link {% if loop.first %}active show{% endif %}" data-bs-toggle="tab" href="#tab-{{ loop.index }}">{{ tab }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-lg-9 mt-4 mt-lg-0">
                    <div class="tab-content">
                        {% for tab, content in {
                            'UI/UX Design Fundamentals': 'Understanding UI vs UX, Visual hierarchy, Typography, Color theory.',
                            'Design Tools & Prototyping': 'Hands-on training with Figma, Adobe XD, and Sketch.',
                            'Front-End Development Basics': 'HTML, CSS, JavaScript basics and responsive design.',
                            'Website Optimization & Performance': 'SEO, accessibility, and performance optimization.'
                        } %}
                            <div class="tab-pane {% if loop.first %}active show{% endif %}" id="tab-{{ loop.index }}">
                                <div class="row">
                                    <div class="col-lg-8 details order-2 order-lg-1">
                                        <h3>{{ tab }}</h3>
                                        <p class="fst-italic">{{ content }}</p>
                                    </div>
                                    <div class="col-lg-4 text-center order-1 order-lg-2">
                                        <img src="{{ asset('img/tabs/tab-1.png') }}" alt="{{ tab }}" class="img-fluid">
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
