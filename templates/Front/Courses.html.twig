{% extends 'base.html.twig' %}

{% block title %}Courses - SkyLearn{% endblock %}

{% block body %}
<!-- Page Title -->
<div class="page-title" data-aos="fade">
    <div class="heading">
        <div class="container">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-lg-8">
                    <h1>Courses</h1>
                    <p class="mb-0">At SkyLearn, we offer a diverse range of professional courses designed to help you master new skills and accelerate your career.</p>
                </div>
            </div>
        </div>
    </div>
    <nav class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="{{ path('app_course_index_front') }}">Home</a></li>
                <li class="current">Courses</li>
            </ol>
        </div>
    </nav>
</div><!-- End Page Title -->

<!-- Courses Section -->
<section id="courses" class="courses section">
    <div class="container section-title" data-aos="fade-up">
        <h2>Courses</h2>
        <p>Popular Courses</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up">
        <div class="row gy-4">
            {% if courses is defined and courses is not empty %}
                {% for course in courses %}
                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                        <div class="course-item card shadow-sm">
                            <div class="card-body">
                                <h3 class="card-title text-primary">{{ course.Title }}</h3>
                                <p><strong>Domain:</strong> {{ course.Domain }}</p>
                                <p><strong>Type:</strong> {{ course.Type }}</p>
                                <p><strong>Price:</strong> {% if course.Price %}{{ course.Price }} TND{% else %}Free{% endif %}</p>
                                <p><strong>Description:</strong> {{ course.Description|slice(0, 100) }}...</p>
                                <p><strong>Creation Date:</strong> {{ course.CreationDate|date('d-m-Y') }}</p>
                                <div class="text-center mt-3">
                                   <a href="{{ path('app_course_show_front', {'id': course.id}) }}">Voir les ressources</a>


                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-center">No courses available at the moment.</p>
            {% endif %}
        </div>
    </div>
</section>

<!-- Custom Styles -->
<style>
    .course-item {
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }
    .course-item:hover {
        transform: scale(1.05);
    }
    .card-title {
        font-size: 1.3rem;
        font-weight: bold;
    }
    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 8px 15px;
        font-size: 0.9rem;
    }
    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>
{% endblock %}
