<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>{% block title %}SkyLearn Admin{% endblock %}</title>

    {% block css %}
      <link rel="stylesheet" href="{{ asset('vendors/mdi/css/materialdesignicons.min.css') }}" />
      <link rel="stylesheet" href="{{ asset('vendors/flag-icon-css/css/flag-icon.min.css') }}" />
      <link rel="stylesheet" href="{{ asset('vendors/css/vendor.bundle.base.css') }}" />
      <link rel="stylesheet" href="{{ asset('vendors/font-awesome/css/font-awesome.min.css') }}" />
      <link rel="stylesheet" href="{{ asset('vendors/bootstrap-datepicker/bootstrap-datepicker.min.css') }}" />
      <link rel="stylesheet" href="{{ asset('css2/style.css') }}" />
      <link rel="shortcut icon" href="{{ asset('images2/favicon.png') }}" />
    {% endblock %}
  </head>
  <body>
    <div class="container-scroller">
      {% block nav %}
      <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <div class="text-center sidebar-brand-wrapper d-flex align-items-center">
          <a class="sidebar-brand brand-logo" href="{{ path('admin_dashboard') }}">
            <img src="{{ asset('images2/Sky.png') }}" alt="logo" style="width: 150px; height: auto;" />
          </a>
          <a class="sidebar-brand brand-logo-mini pl-4 pt-3" href="{{ path('admin_dashboard') }}">
            <img src="{{ asset('images2/Sky.png') }}" alt="logo" style="width: 50px; height: auto;" />
          </a>        
        </div>
        <ul class="nav">
          <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_dashboard') }}">
              <i class="mdi mdi-home menu-icon"></i>
              <span class="menu-title">Dashboard</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_course_index') }}">
              <i class="mdi mdi-contacts menu-icon"></i>
              <span class="menu-title">Courses</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_events') }}">
              <i class="mdi mdi-contacts menu-icon"></i>
              <span class="menu-title">Events</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_internships') }}">
              <i class="mdi mdi-format-list-bulleted menu-icon"></i>
              <span class="menu-title">Internships</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_chart') }}">
              <i class="mdi mdi-chart-bar menu-icon"></i>
              <span class="menu-title">Charts</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_complaints') }}">
              <i class="mdi mdi-table-large menu-icon"></i>
              <span class="menu-title">Complaints</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_users') }}">
              <i class="mdi mdi-file-document-box menu-icon"></i>
              <span class="menu-title">Users</span>
            </a>
          </li>
          <li class="nav-item sidebar-actions">
            <div class="nav-link">
              <div class="mt-4">
                <div class="border-none">
                  <p class="text-black">Notification</p>
                </div>
                <ul class="mt-4 pl-0">
                  <li>Sign Out</li>
                </ul>
              </div>
            </div>
          </li>
        </ul>
      </nav>
      {% endblock %}

      <div class="container-fluid page-body-wrapper">
        {% block navbar %}
        <nav class="navbar col-lg-12 col-12 p-lg-0 fixed-top d-flex flex-row">
          <div class="navbar-menu-wrapper d-flex align-items-stretch justify-content-between">
            <a class="navbar-brand brand-logo-mini align-self-center d-lg-none" href="{{ path('admin_dashboard') }}">
              <img src="{{ asset('images2/logo-mini.svg') }}" alt="logo" />
            </a>
            <button class="navbar-toggler navbar-toggler align-self-center mr-2" type="button" data-toggle="minimize">
              <i class="mdi mdi-menu"></i>
            </button>
            <ul class="navbar-nav">
              <li class="nav-item dropdown">
                <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
                  <i class="mdi mdi-bell-outline"></i>
                  <span class="count count-varient1">7</span>
                </a>
                <div class="dropdown-menu navbar-dropdown navbar-dropdown-large preview-list" aria-labelledby="notificationDropdown">
                  <h6 class="p-3 mb-0">Notifications</h6>
                  <a class="dropdown-item preview-item">
                    <div class="preview-thumbnail">
                      <img src="{{ asset('images2/faces/face4.jpg') }}" alt="" class="profile-pic" />
                    </div>
                    <div class="preview-item-content">
                      <p class="mb-0"> Dany Miles <span class="text-small text-muted">Added Your event</span></p>
                    </div>
                  </a>
                </div>
              </li>
              <li class="nav-item nav-profile dropdown border-0">
                <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-toggle="dropdown">
                  <img class="nav-profile-img mr-2" alt="" src="{{ asset('images2/faces/face1.jpg') }}" />
                  <span class="profile-name">Henry Klein</span>
                </a>
                <div class="dropdown-menu navbar-dropdown w-100" aria-labelledby="profileDropdown">
                  <a class="dropdown-item" href="#">
                    <i class="mdi mdi-cached mr-2 text-success"></i> Activity Log </a>
                  <a class="dropdown-item" href="#">
                    <i class="mdi mdi-logout mr-2 text-primary"></i> Signout </a>
                </div>
              </li>
            </ul>
          </div>
        </nav>
        {% endblock %}

        <div class="main-panel">
          {% block body %} {% endblock %}

          {% block footer %}
          <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
              <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright Â© bootstrapdash.com 2020</span>
              <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap dashboard template</a></span>
            </div>
          </footer>
          {% endblock %}
        </div>
      </div>
    </div>

    {% block js %}
      <script src="{{ asset('vendors/js/vendor.bundle.base.js') }}"></script>
      <script src="{{ asset('vendors/chart.js/Chart.min.js') }}"></script>
      <script src="{{ asset('vendors/bootstrap-datepicker/bootstrap-datepicker.min.js') }}"></script>
      <script src="{{ asset('vendors/flot/jquery.flot.js') }}"></script>
      <script src="{{ asset('js2/off-canvas.js') }}"></script>
      <script src="{{ asset('js2/hoverable-collapse.js') }}"></script>
      <script src="{{ asset('js2/misc.js') }}"></script>
      <script src="{{ asset('js2/dashboard.js') }}"></script>
    {% endblock %}
  </body>
</html>
